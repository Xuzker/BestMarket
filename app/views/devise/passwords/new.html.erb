<div class="container">
  <div class="card">
    <h2>Forgot your password?</h2>

    <%= form_with url: password_path(resource_name), local: true do |f| %>
      <%= f.email_field :email, placeholder: "Email", required: true %>

      <%= f.submit "Send me reset password instructions", class: "button" %>
    <% end %>

    <div class="forgot-password-links">
      <%= link_to "Log in", new_session_path(resource_name) %>
      <%= link_to "Sign up", new_registration_path(resource_name) %>
    </div>
  </div>
</div>
